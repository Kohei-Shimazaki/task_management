<!DOCTYPE html>
<html>
  <head>
    <title>TaskManagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <%= link_to t('session.header.profile'), user_path(current_user.id) %>
      <%= link_to t('session.header.logout'), session_path(current_user.id), method: :delete %>
    <% else %>
      <%= link_to t('session.header.signup'), new_user_path %>
      <%= link_to t('session.header.login'), new_session_path %>
    <% end %>
    <div class="flash_message">
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
