<%= form_with(model: label, local: true) do |form| %>
  <% if label.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(label.errors.count, "error") %> prohibited this label from being saved:</h2>

      <ul>
      <% label.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, t('label.column.title') %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :color, t('label.column.color') %>
    <%= form.select :color, Label.enum_options_for_select(:color) %>
  </div>

  <div class="field">
    <%= form.label :shape, t('label.column.shape') %>
    <%= form.select :shape, Label.enum_options_for_select(:shape) %>
  </div>

  <div class="actions">
    <%= form.submit t('label.submit') %>
  </div>
<% end %>
