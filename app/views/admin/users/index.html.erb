<div class="container">
  <h1><%= t('admin.title.index') %></h1>
  <table class="container" border="1">
    <tr>
      <th class="col-md-3"><%= t('user.column.name') %></th>
      <th class="col-md-3"><%= t('user.column.email') %></th>
      <th class="col-md-1"><%= t('admin.show.number_of_tasks') %></th>
      <th colspan="3">管理</th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.tasks.count %></td>
        <td><%= link_to t('admin.link.show'), admin_user_path(user.id) %></td>
        <td><%= link_to t('admin.link.edit'), edit_admin_user_path(user.id) %></td>
        <td><%= link_to t('admin.link.destroy'), admin_user_path(user.id), method: :delete, data: {confirm: "本当に削除してよろしいですか？"} %></td>
      </tr>
    <% end %>
  </table>
  <%= link_to t('admin.link.new'), new_admin_user_path %>
</div>
